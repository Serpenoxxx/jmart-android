<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/wave1"
            android:layout_width="321dp"
            android:layout_height="126dp"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="189dp"
            android:background="@drawable/ic_wave1accent"
            android:rotation="90"
            android:scaleX="3"
            android:scaleY="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/wave1acc"
            android:layout_width="321dp"
            android:layout_height="126dp"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="210dp"
            android:background="@drawable/ic_wave1"
            android:rotation="90"
            android:scaleX="3"
            android:scaleY="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/wave2acc"
            android:layout_width="321dp"
            android:layout_height="126dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/ic_wave1accent"
            android:rotation="270"
            android:scaleX="3"
            android:scaleY="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/wave2"
            android:layout_width="321dp"
            android:layout_height="126dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/ic_wave1"
            android:rotation="270"
            android:scaleX="3"
            android:scaleY="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="339dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Date1"
                    android:layout_width="190dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/coustard"
                    android:text="Date of Transaction"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="@+id/Receipt"
                    app:layout_constraintStart_toStartOf="@+id/Receipt"
                    app:layout_constraintTop_toBottomOf="@+id/Receipt" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="71dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/coustard"
                    android:text="Address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rating" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="71dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/coustard"
                    android:text="Rating"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/AddressView"
                    android:layout_width="158dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/coustard"
                    android:text="Address"
                    android:textAlignment="textEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/address"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/address" />

                <TextView
                    android:id="@+id/Date2"
                    android:layout_width="300dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/coustard"
                    android:text="Date"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="@+id/Date1"
                    app:layout_constraintStart_toStartOf="@+id/Date1"
                    app:layout_constraintTop_toBottomOf="@+id/Date1" />

                <TextView
                    android:id="@+id/rating2"
                    android:layout_width="71dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="28dp"
                    android:fontFamily="@font/coustard"
                    android:text="Rating"
                    android:textAlignment="textEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/rating"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rating" />

                <Button
                    android:id="@+id/SubmitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="116dp"
                    android:layout_marginBottom="32dp"
                    android:text="Submit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/Receipt"
                    android:layout_width="280dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:hint="Receipt"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/address" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>