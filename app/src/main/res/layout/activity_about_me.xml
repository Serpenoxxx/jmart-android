<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutMeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/wave1"
            android:layout_width="321dp"
            android:layout_height="126dp"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="210dp"
            android:background="@drawable/ic_wave1accent"
            android:rotation="90"
            android:scaleX="3"
            android:scaleY="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/wave1acc"
            android:layout_width="321dp"
            android:layout_height="126dp"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="230dp"
            android:background="@drawable/ic_wave1"
            android:rotation="90"
            android:scaleX="3"
            android:scaleY="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/wave2acc"
            android:layout_width="321dp"
            android:layout_height="126dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/ic_wave1accent"
            android:rotation="270"
            android:scaleX="3"
            android:scaleY="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/wave2"
            android:layout_width="321dp"
            android:layout_height="126dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/ic_wave1"
            android:rotation="270"
            android:scaleX="3"
            android:scaleY="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="360dp"
            android:layout_height="680dp"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/AccountDetail"
                    android:layout_width="190dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/capriola"
                    android:text="Account Details"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/AccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="98dp"
                    android:fontFamily="@font/coustard"
                    android:text="Name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/AccountEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/coustard"
                    android:text="Email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/AccountName" />

                <TextView
                    android:id="@+id/AboutBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/coustard"
                    android:text="Balance"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/AccountEmail" />

                <EditText
                    android:id="@+id/TopUp"
                    android:layout_width="177dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/squared_border"
                    android:ems="10"
                    android:hint=" Top Up Amount"
                    android:inputType="numberDecimal"
                    android:paddingStart="3dp"
                    android:textAlignment="textStart"
                    android:textColorHint="#B3B3B3"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/AboutBalance" />

                <Button
                    android:id="@+id/TopUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/rounded_blue_button"
                    android:text="Top Up"
                    app:layout_constraintBottom_toBottomOf="@+id/TopUp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/TopUp" />

                <Button
                    android:id="@+id/RegisterStoreButton"
                    android:layout_width="280dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="32dp"
                    android:text="Register Store"
                    android:background="@drawable/rounded_blue_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.644"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TopUp"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/NameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/coustard"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/AccountName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/AccountName" />

                <TextView
                    android:id="@+id/EmailView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/coustard"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/AccountEmail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/AccountEmail" />

                <TextView
                    android:id="@+id/BalanceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/coustard"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/AboutBalance"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/AboutBalance" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewRegister"
                    android:layout_width="303dp"
                    android:layout_height="349dp"
                    android:layout_marginTop="18dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TopUp"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/RegisterStore"
                            android:layout_width="107dp"
                            android:layout_height="29dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="Register Store"
                            android:textSize="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/RegisterName"
                            android:layout_width="258dp"
                            android:layout_height="43dp"
                            android:layout_marginTop="28dp"
                            android:ems="10"
                            android:hint="Name"
                            android:inputType="text"
                            android:textColorHint="#B3B3B3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.488"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/RegisterStore" />

                        <EditText
                            android:id="@+id/RegisterAddress"
                            android:layout_width="258dp"
                            android:layout_height="43dp"
                            android:layout_marginTop="24dp"
                            android:ems="10"
                            android:hint="Address"
                            android:inputType="text"
                            android:textColorHint="#B3B3B3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.488"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/RegisterName" />

                        <EditText
                            android:id="@+id/RegisterPhone"
                            android:layout_width="258dp"
                            android:layout_height="43dp"
                            android:layout_marginTop="24dp"
                            android:ems="10"
                            android:hint="Phone Number"
                            android:inputType="number"
                            android:textColorHint="#B3B3B3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.488"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/RegisterAddress" />

                        <Button
                            android:id="@+id/RegisterButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/rounded_blue_button"
                            android:text="Register"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/RegisterPhone" />

                        <Button
                            android:id="@+id/CancelButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/rounded_blue_button"
                            android:text="Cancel"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/RegisterPhone" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:id="@+id/cardViewStore"
                    android:layout_width="303dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/store"
                            android:layout_width="67dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/capriola"
                            android:text="Store"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/storeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="32dp"
                            android:fontFamily="@font/coustard"
                            android:text="Name"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/store" />

                        <TextView
                            android:id="@+id/addressNameView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/coustard"
                            android:text="Address"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/storeName" />

                        <TextView
                            android:id="@+id/storePhoneNumber"
                            android:layout_width="101dp"
                            android:layout_height="19dp"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/coustard"
                            android:text="Phone Number"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/addressNameView" />

                        <TextView
                            android:id="@+id/storeNameView"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/coustard"
                            android:text="TextView"
                            android:textAlignment="textEnd"
                            app:layout_constraintBottom_toBottomOf="@+id/storeName"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/storeName" />

                        <TextView
                            android:id="@+id/storeAddressView"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/coustard"
                            android:text="TextView"
                            android:textAlignment="textEnd"
                            app:layout_constraintBottom_toBottomOf="@+id/addressNameView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/addressNameView" />

                        <TextView
                            android:id="@+id/storePhoneNumberView"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/coustard"
                            android:text="TextView"
                            android:textAlignment="textEnd"
                            app:layout_constraintBottom_toBottomOf="@+id/storePhoneNumber"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/storePhoneNumber" />

                        <Button
                            android:id="@+id/InvoiceButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/rounded_blue_button"
                            android:text="Invoice"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>