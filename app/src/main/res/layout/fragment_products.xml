<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductsFragment">

    <Button
        android:id="@+id/productButton"
        android:layout_width="83dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#E1D7D7"
        android:text="NEXT"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/ProductButton"
        app:layout_constraintStart_toEndOf="@+id/ProductButton"
        app:layout_constraintTop_toTopOf="@+id/ProductButton" />

    <Button
        android:id="@+id/productButton2"
        android:layout_width="83dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="#E1D7D7"
        android:text="GO"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/IndexNumber"
        app:layout_constraintStart_toEndOf="@+id/IndexNumber"
        app:layout_constraintTop_toTopOf="@+id/IndexNumber" />

    <Button
        android:id="@+id/ProductButton"
        android:layout_width="83dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#E1D7D7"
        android:text="PREV"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/ListProduct"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/IndexNumber"
        android:layout_width="59dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/productButton"
        app:layout_constraintStart_toEndOf="@+id/productButton"
        app:layout_constraintTop_toTopOf="@+id/productButton" />

    <ListView
        android:id="@+id/ListProduct"
        android:layout_width="395dp"
        android:layout_height="626dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
